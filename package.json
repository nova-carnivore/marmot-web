{
  "name": "marmot-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Reference web client for Marmot Protocol â€” secure group messaging with MLS + Nostr",
  "author": "Nova Carnivore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nova-carnivore/marmot-web"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,vue,css}'",
    "format:check": "prettier --check 'src/**/*.{ts,vue,css}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@vueuse/core": "^12.5.0",
    "immer": "^10.1.1",
    "localforage": "^1.10.0",
    "marmot-ts": "file:../marmot-ts",
    "nostr-tools": "^2.10.4",
    "pinia": "^3.0.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/vite": "^4.1.5",
    "@tsconfig/node22": "^22.0.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/test-utils": "^2.4.6",
    "daisyui": "^5.5.0",
    "eslint": "^9.20.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.3.5",
    "vitest": "^3.0.5",
    "vue-tsc": "^2.2.8"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
